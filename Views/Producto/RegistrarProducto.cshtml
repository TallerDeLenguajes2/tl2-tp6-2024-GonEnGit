
@using tl2_tp6_2024_GonEnGit.Models

@using EspacioViewModels

@model ProductoNuevoViewModel

<!-- asp-controller indica que model se llama -->
<!-- asp-action indica que metodo de ese model se llama -->

<fieldset class="container border border-2 border-success rounded w-50">
    <form asp-controller="Producto" asp-action="RegistrarProducto" class="p-2">
        <legend>Producto Nuevo</legend>
        <article class="form-group">
            <label asp-for="@Model.Desc" class="form-label">
                Descripcion del producto: 
            </label>
            <input asp-for="@Model.Desc" class="form-control">
        </article>
        <article class="my-2 form-group">
            <label asp-for="@Model.Prec" class="form-label">
                Precio:
            </label>
            <input asp-for="@Model.Prec" class="form-control">
        </article>
        <article class="p-3 d-flex justify-content-center">
            <input type="submit" value="Registrar" class="btn btn-primary">
        </article>
    </form>
</fieldset>